@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl w-full space-y-8">
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800">@ViewData["Title"]</h1>
            <p class="mt-2 text-sm text-gray-600">Ingresa tus credenciales para acceder a tu cuenta</p>
        </div>

        <div class="mt-8 bg-white shadow-md overflow-hidden rounded-lg">
            <div class="md:flex">
                <!-- Formulario de login local -->
                <div class="md:w-1/2 p-6 md:p-8 border-b md:border-b-0 md:border-r border-gray-200">
                    <h2 class="text-xl font-semibold text-gray-800 mb-6">Acceder con tu cuenta</h2>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-sm text-red-600 mb-4 p-3 bg-red-50 border border-red-200 rounded-md" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                            <input asp-for="Input.Email" class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                            <span asp-validation-for="Input.Email" class="text-sm text-red-600"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                            <input asp-for="Input.Password" class="w-full py-2 px-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-sm text-red-600"></span>
                        </div>

                        <div class="flex items-center justify-between mb-6">
                          
                      
                        </div>

                        <div>
                            <button id="login-submit" type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium bg-primary bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                                Iniciar Sesión
                            </button>
                        </div>
                    </form>
                </div>

                <!-- Servicios externos de autenticación -->
                <div class="md:w-1/2 p-6 md:p-8 bg-gray-50">
                    <h2 class="text-xl font-semibold text-gray-800 mb-6">Escuela de talentos</h2>

                    @{
                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div class="bg-white p-4 rounded-md border border-gray-200">
                                <p class="text-sm text-gray-600">
                                    No hay escusas para no aprender
                                </p>
                            </div>
                        }
                        
                    }

                    <div class="mt-6">
                        <div class="relative">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-300"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-gray-50 text-gray-500">
                                    Información de seguridad
                                </span>
                            </div>
                        </div>
                        <p class="mt-4 text-xs text-center text-gray-500">
                            Al iniciar sesión, aceptas nuestros
                            <a href="#" class="text-primary hover:text-primary-dark">
                                Términos de servicio
                            </a> y
                            <a href="#" class="text-primary hover:text-primary-dark">
                                Política de privacidad
                            </a>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
